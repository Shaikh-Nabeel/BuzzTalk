<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/matt_black"
    android:padding="10dp">

    <View
        android:id="@+id/profile_v"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/view_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/name_v"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="@color/light_grey"
        app:layout_constraintStart_toEndOf="@+id/profile_v"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp"
        />

    <View
        android:id="@+id/date_v"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:background="@color/light_grey"
        app:layout_constraintStart_toEndOf="@+id/profile_v"
        app:layout_constraintTop_toBottomOf="@+id/name_v"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp"
        />

    <View
        android:id="@+id/post_tv"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/light_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_v"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>