<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/border_for_post_text"
    android:backgroundTint="@color/matt_black"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/createdAt_Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@+id/postOptionMenuFragment"
            android:padding="2dp"
            android:paddingStart="4dp"
            android:textColor="@color/white_90"
            android:textSize="13sp"
            tools:ignore="RtlSymmetry"
            tools:text="12/23/2001" />

        <ImageView
            android:id="@+id/postOptionMenuFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_baseline_more_vert_24"
            android:backgroundTint="@color/white_1"
            android:contentDescription="@string/more_btn" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/post_text_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/postText_Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web|email"
            android:padding="10dp"
            android:textColor="@color/white_1"
            android:textColorLink="@color/line_color"
            android:textSize="16sp"
            tools:text="Hyy, Ramesh Gutka here, Bolo zuban kesari" />

        <ImageView
            android:id="@+id/postImage_Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/post"
            android:padding="1dp"
            android:minHeight="300dp"
            android:adjustViewBounds="true"
            android:src="@drawable/galler_image_bg_24"
            tools:ignore="ImageContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <ToggleButton
            android:id="@+id/likeBtn_Profile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/like_toggle_selector"
            android:text="@string/space"
            android:textOff=""
            android:textOn=""
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/commentBtn_Profile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/bubble_chat"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/likeCount_Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="3dp"
            android:textColor="@color/white_1"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="24 likes" />

    </LinearLayout>

</LinearLayout>